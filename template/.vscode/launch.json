{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // Docs: https://code.visualstudio.com/docs/editor/debugging#_launch-configurations
  "version": "0.2.0",
  "configurations": [
    {
      "preLaunchTask": "Build (debug)",
      // probe-rs docs for VSCode integration: https://probe.rs/docs/tools/debugger/
      "type": "probe-rs-debug",
      "request": "launch",
      "name": "Flash & run (debug)",
      "cwd": "${workspaceFolder}",
      "chip": "RP2040",
      "connectUnderReset": false,
      "flashingConfig": {
        "flashingEnabled": true,
        "haltAfterReset": false
      },
      "coreConfigs": [
        {
          "coreIndex": 0,
          "programBinary": "./target/thumbv6m-none-eabi/debug/{{project-name}}"
        }
      ]
    },
    {
      "preLaunchTask": "Build (release)",
      // probe-rs docs for VSCode integration: https://probe.rs/docs/tools/debugger/
      "type": "probe-rs-debug",
      "request": "launch",
      "name": "Flash & run (release)",
      "cwd": "${workspaceFolder}",
      "chip": "RP2040",
      "connectUnderReset": false,
      "flashingConfig": {
        "flashingEnabled": true,
        "haltAfterReset": false
      },
      "coreConfigs": [
        {
          "coreIndex": 0,
          "programBinary": "./target/thumbv6m-none-eabi/release/{{project-name}}"
        }
      ]
    },
  ]
}